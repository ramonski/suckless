#!/usr/bin/env bash

cpu_perc () {
    t1=$(sysctl kern.cp_time)
    sleep .1
    t2=$(sysctl kern.cp_time)
    # w/ idle
    a=$(echo $t1 | awk '{ print $2+$3+$4+$5+$6 }')
    b=$(echo $t2 | awk '{ print $2+$3+$4+$5+$6 }')
    d1=$((a-b))
    # w/o idle
    p1=$(echo $t1 | awk '{ print $2+$3+$4+$5 }')
    p2=$(echo $t2 | awk '{ print $2+$3+$4+$5 }')
    d2=$((p1-p2))

    if [ $d1 -eq 0 ]; then
      echo "0"
    else
      echo "$((100*d2/d1))"
    fi

}

printf "%s" $(cpu_perc)
