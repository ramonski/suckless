#!/usr/bin/env bash

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
	2) notify-send "$(mixer)" ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	4) mixer vol +1 ;;
	5) mixer vol -1 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

#[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
	icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
	icon="ðŸ”ˆ"
else
	echo MUTE && exit
fi

echo "$icon$vol%"
